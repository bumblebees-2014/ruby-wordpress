<section class="center_section">
	<section class="post_section">

		<form id="add_article_form" action="/create" method="post">
			<div class="form-group">
				<input class="comment_form form-control" name="title" placeholder="Title"<%unless logged_in?%> disabled value="login to post" <%end%>>
			</div>
			<div class="form-group">
				<input class="comment_form form-control" name="content" placeholder="Content"<%unless logged_in?%> disabled value="login to post" <%end%>>
			</div>
			<div class="form-group">
				<input class="comment_form form-control" name="image_url" placeholder="Image_url"<%unless logged_in?%> disabled value="login to post" <%end%>>
			</div>
			<div class="form-group">
				<input class="btn btn-info" type="submit" value="submit">
			</div>
		</form>

	</section>
</section>
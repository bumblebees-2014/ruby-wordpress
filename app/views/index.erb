<% @articles.each do |article| %>
	<a href="/article/<%= article.id %>">
		<section class="thumbnail_outer_sections">
			<section class="thumbnail_inner_sections">
				<img class="thumbnails img-thumbnail" src="<%= article.image_url %>">
			</section>
			<section class="tool_bar">
				<span class="tool_bar_icons">
					<span class="title_summary"><%= article.title[0..20] %>...</span>
					<span class="comments"><i class="fa fa-comment"></i><%= article.comments.count %></span>
				</span>
			</section>
		</section>
	</a>
<% end %>